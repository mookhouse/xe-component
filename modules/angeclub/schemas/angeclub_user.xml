<table name="angeclub_user">
	<column name="cu_idx" type="number" size="11" notnull="notnull" primary_key="primary_key" auto_increment="auto_increment"/>
	<column name="cu_id" type="varchar" size="30" notnull="notnull" />
	<column name="cu_zone" type="varchar" size="30" />  <!-- 권역명 -->
    <column name="cu_pw" type="varchar" size="200" />
    <column name="cc_name" type="varchar" size="45" notnull="notnull" />
    <column name="cu_image" type="varchar" size="100" />
    <column name="cu_files" type="text" />
    <column name="cu_memo" type="text" />
    <column name="cu_phone_1" type="varchar" size="45" notnull="notnull" />
    <column name="cu_phone_2" type="varchar" size="45" />
    <column name="cu_email" type="varchar" size="100" notnull="notnull" />
    <column name="cu_address" type="text" />
    <column name="cu_birth" type="varchar" size="8" notnull="notnull" />
    <column name="cu_date_regi" type="date" />
    <column name="cu_date_hire" type="date" />
    <column name="cu_date_expire" type="date" />
    <column name="cu_date_signin" type="date" />
    <column name="cu_date_update" type="date" />
    <column name="cu_state" type="number" size="11" notnull="notnull" default="1" />  <!-- 1:활동,0:대기,99:탈퇴 -->
    <column name="cu_ip" type="varchar" size="45" />
    <column name="cu_type" type="number" size="11" notnull="notnull" default="1" />  <!-- 1:스탭,99:관리자 -->
    <column name="cu_prn" type="varchar" size="45" />
    <column name="cu_migration" type="number" size="11" />
    <column name="cu_st_date" type="varchar" size="10" />  <!-- 입사일 -->
    <column name="cu_en_date" type="varchar" size="10" />  <!-- 퇴사일 -->
</table>